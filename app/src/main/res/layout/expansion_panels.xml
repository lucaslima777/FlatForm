<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.angmarch.views.NiceSpinner
        android:id="@+id/expansion_panel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/edittext_backgorund"
        android:ellipsize="marquee"
        android:hint="option 1"
        android:textColorHint="@color/TextColor"
        app:arrowDrawable="@drawable/arrow"
        app:backgroundSelector="@color/panel_expand"
        app:fontFamily="@font/abeezee_regular"
        app:textTint="@color/TextColor" />


</android.support.constraint.ConstraintLayout>